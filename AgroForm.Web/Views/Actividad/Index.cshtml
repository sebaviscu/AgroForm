@using AgroForm.Web.Models.IndexVM
@model ActividadesIndexVM

@{
    ViewData["Title"] = "Labores";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">
                <i class="ph ph-calendar-check text-primary me-2"></i>Labores
            </h1>
        </div>
    </div>

    <!-- Filtros -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-end">
                <div class="d-flex align-items-end">
                    <div class="me-3">
                        <label class="form-label fw-semibold">Filtrar por Campo:</label>
                        <select id="campoFilter" class="form-select">
                            @foreach (var campo in Model.Campos)
                            {
                                <option value="@campo.Text" selected="@campo.Selected">@campo.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="d-flex align-items-end">
                    <div class="d-flex justify-content-around gap-3" style="align-items: center;">
                        <label for="selectorMoneda" class="form-label fw-semibold">Moneda:</label>
                        <select class="form-select" id="selectorMoneda" onchange="cambiarMoneda()">
                            <option value="ARS">Pesos (ARS)</option>
                            <option value="USD">Dólares (USD)</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla Actividades -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="tblActividades" class="table table-hover table-striped w-100">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Campo</th>
                            <th>Lote</th>
                            <th>Detalle</th>
                            <th>Observaciones</th>
                            <th>Costo</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var actividad in Model.Labores)
                        {
                            <tr>
                                <td data-order="@actividad.Fecha.ToString("yyyyMMdd")">
                                    @actividad.Fecha.ToString("dd/MM/yyyy")
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="actividad-icono me-2 flex-shrink-0">
                                            <i class="ph @actividad.IconoTipoActividad" style="color: @actividad.IconoColorTipoActividad"></i>
                                        </div>
                                        <strong>@actividad.TipoActividad</strong>
                                    </div>
                                </td>
                                <td>@actividad.Campo</td>
                                <td>@actividad.Lote</td>
                                <td>@actividad.Detalle</td>
                                <td>@actividad.Observacion</td>
                                <td data-order-ars="@(actividad.CostoARS ?? 0)" data-order-usd="@(actividad.CostoUSD ?? 0)">
                                    <span class="valor-ars">
                                        @if (actividad.CostoARS.HasValue)
                                        {
                                            <text>$@actividad.CostoARS.Value.ToString("N0")</text>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </span>
                                    <span class="valor-usd" style="display: none;">
                                        @if (actividad.CostoUSD.HasValue)
                                        {
                                            <text>US$@actividad.CostoUSD.Value.ToString("N2")</text>
                                        }
                                        else
                                        {
                                            <text>-</text>
                                        }
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <button type="button" class="btn btn-outline-primary btn-edit" data-id="@actividad.Id" data-idTipoActividad="@actividad.IdTipoActividad">
                                            <i class="ph ph-pencil"></i>
                                        </button>
                                        <button type="button" class="btn btn-outline-danger btn-delete" data-id="@actividad.Id" data-idTipoActividad="@actividad.IdTipoActividad">
                                            <i class="ph ph-trash"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/views/actividad.js" asp-append-version="true"></script>
}
