@{
    ViewData["Title"] = "Campos";
}

<head>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>

<style>
    /* Estilos para el mapa en el modal */
    #map {
        border-radius: 0 0 0.375rem 0.375rem;
    }

    .leaflet-container {
        background: #f8f9fa;
    }

    /* Estilos para los controles del mapa */
    .map-controls {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 1000;
        background: white;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    /* Ajustes para el modal */
    .modal-xl {
        max-width: 1200px;
    }

    /* Estilos para la información del campo */
    #field-info small {
        font-size: 0.875em;
    }

    #field-info .fw-bold {
        font-size: 0.9em;
    }

    /* Estilos para el modal de visualización */
    #view-map {
        border-radius: 0 0 0.375rem 0.375rem;
    }

    .btn-layer.active {
        background-color: #0d6efd;
        color: white;
        border-color: #0d6efd;
    }

    .layer-info {
        font-size: 0.8rem;
        color: #6c757d;
    }

    /* Leyenda personalizada */
    .custom-legend {
        background: white;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .legend-item {
        display: flex;
        align-items: center;
        margin-bottom: 5px;
    }

    .legend-color {
        width: 20px;
        height: 10px;
        margin-right: 8px;
        border: 1px solid #ccc;
    }

    .layer-status {
        font-size: 0.75rem;
        color: #28a745;
        font-weight: bold;
    }

    .layer-unavailable {
        color: #dc3545;
    }

    .leaflet-control-layers {
        background: white !important;
        border-radius: 5px !important;
        padding: 10px !important;
    }
</style>

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">
                <i class="ph ph-map-trifold text-success me-2"></i>Campos
            </h1>
        </div>
        <div>
            <button id="btnNuevoCampo" class="btn btn-primary">
                <i class="ph ph-plus-circle me-1"></i> Nuevo Campo
            </button>
        </div>
    </div>

    <!-- Grilla de Campos -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="tblCampos" class="table table-striped table-hover w-100">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Ubicación</th>
                            <th>Superficie (Ha)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Se llenará dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Campo -->
<div class="modal fade" id="modalCampo" tabindex="-1" aria-labelledby="modalCampoLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form id="formCampo" novalidate>
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCampoLabel">Nuevo Campo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="hidden" id="idCampo">

                            <div class="row">
                                <div class="col-8">
                                    <div class="mb-3">
                                        <label for="nombre" class="form-label">Nombre del Campo <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="nombre" required maxlength="100">
                                        <div class="invalid-feedback">Por favor ingrese el nombre del campo</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="mb-3">
                                        <label for="superficieHectareas" class="form-label">Superficie Utilizable <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="superficieHectareas" step="0.01" min="0.01" placeholder="0.00" required>
                                            <span class="input-group-text text-muted">Ha</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mb-3">
                                        <label for="ubicacion" class="form-label">Referencia</label>
                                        <input type="text" class="form-control" id="ubicacion" maxlength="200" placeholder="Ej: Ruta 5, Km 123">
                                    </div>
                                </div>
                            </div>

                            <!-- Información del campo -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">Información del Campo</h6>
                                </div>
                                <div class="card-body">
                                    <div id="field-info">
                                        <div class="mb-2">
                                            <small class="text-muted">Estado:</small>
                                            <div id="status" class="fw-bold text-warning">No se ha dibujado ningún campo</div>
                                        </div>
                                        <div class="d-flex justify-content-between flex-wrap text-center border-top pt-2">
                                            <div class="flex-fill">
                                                <small class="text-muted d-block">Centro del Campo</small>
                                                <div id="center-coords" class="fw-bold">-</div>
                                            </div>
                                            <div class="flex-fill">
                                                <small class="text-muted d-block">Superficie</small>
                                                <div id="area" class="fw-bold">-</div>
                                            </div>
                                            <div class="flex-fill">
                                                <small class="text-muted d-block">Perímetro</small>
                                                <div id="perimeter" class="fw-bold">-</div>
                                            </div>
                                        </div>
                                        <input type="hidden" id="coordenadasPoligono">
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">Controles del Mapa</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex gap-2 flex-wrap">
                                        <button type="button" class="btn btn-primary btn-sm" id="btn-draw">
                                            <i class="ph ph-pencil-simple-line me-1"></i> Dibujar Campo
                                        </button>
                                        <button type="button" class="btn btn-warning btn-sm" id="btn-clear">
                                            <i class="ph ph-eraser me-1"></i> Limpiar
                                        </button>
                                        <button type="button" class="btn btn-success btn-sm" id="btn-calculate">
                                            <i class="ph ph-calculator me-1"></i> Calcular
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-6">

                            <!-- Controles del mapa -->
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">Seleccione el campo en el mapa</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div id="map" style="height: 400px; width: 100%;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="btnGuardarCampo">
                        <i class="ph ph-check-circle me-1"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal Historial -->
<!-- Modal Historial -->
<div class="modal fade" id="modalHistorial" tabindex="-1" aria-labelledby="modalHistorialLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalHistorialLabel">
                    <i class="ph ph-clock-counter-clockwise me-2"></i>Historial del Campo
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <!-- Información básica del campo -->
                <div class="card mb-3">
                    <div class="card-body py-2">
                        <div class="row">
                            <div class="col">
                                <h6 class="mb-1 fw-bold" id="historial-nombre">-</h6>
                                <small class="text-muted" id="historial-superficie">-</small>
                            </div>
                            <div class="col-auto">
                                <span class="badge bg-primary" id="historial-total">0 actividades</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Filtro simple -->
                <div class="card mb-3">
                    <div class="card-body py-2">
                        <div class="row g-2 align-items-center">
                            <div class="col">
                                <label for="filtro-anio" class="form-label small mb-1">Filtrar por año:</label>
                                <select class="form-select form-select-sm" id="filtro-anio">
                                    <option value="todos">Todos los años</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Historial -->
                <div id="contenido-historial">
                    <div class="text-center text-muted py-4">
                        <i class="ph ph-hourglass me-1"></i>Cargando historial...
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="ph ph-x me-1"></i> Cerrar
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Visualización Campo -->
<div class="modal fade" id="modalVisualizacion" tabindex="-1" aria-labelledby="modalVisualizacionLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalVisualizacionLabel">
                    <i class="ph ph-map-trifold me-2"></i>Visualización del Campo
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Panel de información y controles -->
                    <div class="col-md-4">
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="ph ph-info me-1"></i>Información del Campo
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="campo-info">
                                    <div class="mb-2">
                                        <small class="text-muted">Nombre:</small>
                                        <div id="view-nombre" class="fw-bold">-</div>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">Ubicación:</small>
                                        <div id="view-ubicacion" class="fw-bold">-</div>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">Superficie:</small>
                                        <div id="view-superficie" class="fw-bold">-</div>
                                    </div>
                                    <div class="mb-2">
                                        <small class="text-muted">Centro:</small>
                                        <div id="view-centro" class="fw-bold small">-</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Selector de fecha -->
                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="ph ph-calendar me-1"></i>Fecha de Análisis
                                </h6>
                            </div>
                            <div class="card-body">

                                <input type="date" class="form-control form-control-sm" id="layer-date" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                <div class="form-text small">
                                    <i class="ph ph-info me-1"></i>
                                    Los datos se actualizan automáticamente al cambiar la fecha
                                </div>
                            </div>
                        </div>

                        <!-- Controles de visualización -->
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="ph ph-palette me-1"></i>Visualización
                                </h6>
                            </div>
                            <div class="card-body">
                                <div class="d-grid gap-2">
                                    <button type="button" class="btn btn-outline-primary btn-viz" data-viz="normal">
                                        <i class="ph ph-eye me-1"></i> Vista Normal
                                    </button>
                                    <button type="button" class="btn btn-outline-success btn-viz" data-viz="ndvi">
                                        <i class="ph ph-plant me-1"></i> Color por Vegetación
                                    </button>
                                    <button type="button" class="btn btn-outline-info btn-viz" data-viz="humidity">
                                        <i class="ph ph-drop me-1"></i> Color por Humedad
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-viz" data-viz="sentinel">
                                        <i class="ph ph-satellite me-1"></i> Vista ESRI Satélite
                                    </button>
                                </div>

                                <!-- Leyenda NDVI -->
                                <div id="ndvi-legend" class="mt-3 p-2 border rounded" style="display: none;">
                                    <small class="fw-bold d-block mb-1">Leyenda Vegetación:</small>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #d73027;"></div>
                                        <small class="ms-2">Baja vegetación</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #fee08b;"></div>
                                        <small class="ms-2">Media vegetación</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div style="width: 20px; height: 10px; background: #1a9850;"></div>
                                        <small class="ms-2">Alta vegetación</small>
                                    </div>
                                </div>

                                <!-- Leyenda Humedad -->
                                <div id="humidity-legend" class="mt-3 p-2 border rounded" style="display: none;">
                                    <small class="fw-bold d-block mb-1">Leyenda Humedad:</small>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #d73027;"></div>
                                        <small class="ms-2">Seco</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #fdae61;"></div>
                                        <small class="ms-2">Ligeramente húmedo</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #fee08b;"></div>
                                        <small class="ms-2">Húmedo</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div style="width: 20px; height: 10px; background: #1a9850;"></div>
                                        <small class="ms-2">Muy húmedo</small>
                                    </div>
                                </div>

                                <!-- En la sección de controles de visualización, después de las otras leyendas: -->
                                <div id="esri-legend" class="mt-3 p-2 border rounded" style="display: none;">
                                    <small class="fw-bold d-block mb-1">🎨 Guía de Colores - Imagen Satelital:</small>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #1a5a1a;"></div>
                                        <small class="ms-2">Vegetación densa / Bosques</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #8db46c;"></div>
                                        <small class="ms-2">Vegetación media / Cultivos</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #b59d5a;"></div>
                                        <small class="ms-2">Vegetación seca / Rastrojos</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #a67c52;"></div>
                                        <small class="ms-2">Suelo desnudo / Tierra</small>
                                    </div>
                                    <div class="d-flex align-items-center mb-1">
                                        <div style="width: 20px; height: 10px; background: #4a6fa3;"></div>
                                        <small class="ms-2">Agua / Cuerpos de agua</small>
                                    </div>
                                    <div class="d-flex align-items-center">
                                        <div style="width: 20px; height: 10px; background: #7d7d7d;"></div>
                                        <small class="ms-2">Zonas urbanas / Infraestructura</small>
                                    </div>
                                    <div class="mt-2 small text-muted">
                                        <i class="ph ph-info"></i> Basado en imágenes ESRI World Imagery
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Mapa y Análisis -->
                    <div class="col-md-8">
                        <!-- Mapa -->
                        <div class="card mb-3">
                            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                                <h6 class="mb-0">
                                    <i class="ph ph-map-trifold me-1"></i>Mapa
                                </h6>
                                <div>
                                    <small id="current-viz" class="text-muted">Vista Normal</small>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div id="view-map" style="height: 400px; width: 100%;"></div>
                            </div>
                        </div>

                        <!-- Análisis Completo -->
                        <div class="card">
                            <div class="card-header bg-light">
                                <h6 class="mb-0">
                                    <i class="ph ph-chart-line me-1"></i>Análisis Completo del Campo
                                </h6>
                            </div>
                            <div class="card-body">
                                <div id="analisis-completo">
                                    <div class="text-center text-muted">
                                        <i class="ph ph-hourglass me-1"></i>Cargando análisis...
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="ph ph-x me-1"></i> Cerrar
                </button>
                <button type="button" class="btn btn-primary" id="btn-export-analysis">
                    <i class="ph ph-export me-1"></i> Exportar Análisis
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/terraformer@1.0.9/terraformer.js"></script>
    <script src="https://unpkg.com/terraformer-wkt-parser@1.2.1/terraformer-wkt-parser.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@turf/turf@6/turf.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>

    <script src="~/js/views/campo.js" asp-append-version="true"></script>
}