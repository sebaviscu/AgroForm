@{
    ViewData["Title"] = "Campos";
}

<head>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
</head>

<style>
    /* Estilos para el mapa en el modal */
    #map {
        border-radius: 0 0 0.375rem 0.375rem;
    }

    .leaflet-container {
        background: #f8f9fa;
    }

    /* Estilos para los controles del mapa */
    .map-controls {
        position: absolute;
        top: 10px;
        right: 10px;
        z-index: 1000;
        background: white;
        padding: 10px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    /* Ajustes para el modal */
    .modal-xl {
        max-width: 1200px;
    }

    /* Estilos para la información del campo */
    #field-info small {
        font-size: 0.875em;
    }

    #field-info .fw-bold {
        font-size: 0.9em;
    }
</style>

<div class="container-fluid">
    <!-- Header Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">
                <i class="ph ph-map-trifold text-success me-2"></i>Campos
            </h1>
            <p class="text-muted mb-0">Gestión de campos agrícolas</p>
        </div>
        <div>
            <button id="btnNuevoCampo" class="btn btn-primary">
                <i class="ph ph-plus-circle me-1"></i> Nuevo Campo
            </button>
        </div>
    </div>

    <!-- Grilla de Campos -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="tblCampos" class="table table-striped table-hover w-100">
                    <thead class="table-light">
                        <tr>
                            <th>Nombre</th>
                            <th>Ubicación</th>
                            <th>Superficie (Ha)</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Se llenará dinámicamente -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal de Campo -->
<div class="modal fade" id="modalCampo" tabindex="-1" aria-labelledby="modalCampoLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <form id="formCampo" novalidate>
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCampoLabel">Nuevo Campo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <input type="hidden" id="idCampo">

                            <div class="row">
                                <div class="col-8">
                                    <div class="mb-3">
                                        <label for="nombre" class="form-label">Nombre del Campo <span class="text-danger">*</span></label>
                                        <input type="text" class="form-control" id="nombre" required maxlength="100">
                                        <div class="invalid-feedback">Por favor ingrese el nombre del campo</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="mb-3">
                                        <label for="superficieHectareas" class="form-label">Superficie Utilizable <span class="text-danger">*</span></label>
                                        <div class="input-group">
                                            <input type="number" class="form-control" id="superficieHectareas" step="0.01" min="0.01" placeholder="0.00" required>
                                            <span class="input-group-text text-muted">Ha</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="mb-3">
                                        <label for="ubicacion" class="form-label">Referencia</label>
                                        <input type="text" class="form-control" id="ubicacion" maxlength="200" placeholder="Ej: Ruta 5, Km 123">
                                    </div>
                                </div>
                            </div>

                            <!-- Información del campo -->
                            <div class="card mb-3">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">Información del Campo</h6>
                                </div>
                                <div class="card-body">
                                    <div id="field-info">
                                        <div class="mb-2">
                                            <small class="text-muted">Estado:</small>
                                            <div id="status" class="fw-bold text-warning">No se ha dibujado ningún campo</div>
                                        </div>
                                        <div class="d-flex justify-content-between flex-wrap text-center border-top pt-2">
                                            <div class="flex-fill">
                                                <small class="text-muted d-block">Centro del Campo</small>
                                                <div id="center-coords" class="fw-bold">-</div>
                                            </div>
                                            <div class="flex-fill">
                                                <small class="text-muted d-block">Superficie</small>
                                                <div id="area" class="fw-bold">-</div>
                                            </div>
                                            <div class="flex-fill">
                                                <small class="text-muted d-block">Perímetro</small>
                                                <div id="perimeter" class="fw-bold">-</div>
                                            </div>
                                        </div>
                                        <input type="hidden" id="coordenadasPoligono">
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">Controles del Mapa</h6>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex gap-2 flex-wrap">
                                        <button type="button" class="btn btn-primary btn-sm" id="btn-draw">
                                            <i class="ph ph-pencil-simple-line me-1"></i> Dibujar Campo
                                        </button>
                                        <button type="button" class="btn btn-warning btn-sm" id="btn-clear">
                                            <i class="ph ph-eraser me-1"></i> Limpiar
                                        </button>
                                        <button type="button" class="btn btn-success btn-sm" id="btn-calculate">
                                            <i class="ph ph-calculator me-1"></i> Calcular
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="col-md-6">

                            <!-- Controles del mapa -->
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h6 class="mb-0">Seleccione el campo en el mapa</h6>
                                </div>
                                <div class="card-body p-0">
                                    <div id="map" style="height: 400px; width: 100%;"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="btnGuardarCampo">
                        <i class="ph ph-check-circle me-1"></i> Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/terraformer@1.0.9/terraformer.js"></script>
    <script src="https://unpkg.com/terraformer-wkt-parser@1.2.1/terraformer-wkt-parser.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@turf/turf@6/turf.min.js"></script>

    <script src="~/js/views/campo.js" asp-append-version="true"></script>
}