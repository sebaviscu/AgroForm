@{
    ViewData["Title"] = "Gastos";
}

<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 fw-bold mb-1">
                <i class="ph ph-receipt text-danger me-2"></i>Gastos
            </h1>
        </div>
        <div class="">
            <div class="d-flex justify-content-around gap-3" style="align-items: center;">
                <label for="selectorMoneda" class="form-label fw-semibold">Moneda:</label>
                <select class="form-select" id="selectorMoneda" onchange="cambiarMoneda()">
                    <option value="ARS">Pesos (ARS)</option>
                    <option value="USD">Dólares (USD)</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Tarjetas de Resumen -->
    <div class="row mb-4">
        <!-- Card 1: Lista de gastos agrupados -->
        <div class="col-md-3">
            <div class="card shadow-sm h-100">
                <div class="card-header ">
                    <h6 class="card-title mb-0">
                        <i class="ph ph-list me-2"></i>Gastos por Tipo
                    </h6>
                </div>
                <div class="card-body p-2">
                    <div class="table-responsive" style="max-height: 300px;">

                        <div id="loadingTabla1" class="text-center py-3">
                            <div class="spinner-border spinner-border-sm text-info" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <small class="text-muted ms-2">Cargando...</small>
                        </div>

                        <table class="table table-sm table-hover" id="tablaResumenGastos">
@*                             <thead class="table-light sticky-top">
                                <tr>
                                    <th>Tipo</th>
                                    <th class="text-end">Total</th>
                                </tr>
                            </thead> *@
                            <tbody id="tbodyResumenGastos">
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2: Gráfico de torta -->
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="ph ph-chart-pie me-2"></i>Distribución de Gastos
                    </h6>
                </div>
                <div class="card-body">

                    <div id="loadingTabla2" class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-info" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <small class="text-muted ms-2">Cargando...</small>
                    </div>

                    <div id="graficoTorta"></div>
                </div>
            </div>
        </div>

        <!-- Card 3: Gráfico de barras por mes -->
        <div class="col-md-5">
            <div class="card shadow-sm h-100">
                <div class="card-header">
                    <h6 class="card-title mb-0">
                        <i class="ph ph-chart-bar me-2"></i>Gastos Mensuales
                    </h6>
                </div>
                <div class="card-body">

                    <div id="loadingTabla3" class="text-center py-3">
                        <div class="spinner-border spinner-border-sm text-info" role="status">
                            <span class="visually-hidden">Cargando...</span>
                        </div>
                        <small class="text-muted ms-2">Cargando...</small>
                    </div>

                    <div id="graficoBarras"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla Gasto -->
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table id="tblGasto" class="table table-hover table-striped w-100">
                    <thead class="table-light">
                        <tr>
                            <th>Fecha</th>
                            <th>Tipo</th>
                            <th>Costo</th>
                            <th>Observaciones</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/apexcharts@3.35.0/dist/apexcharts.min.js"></script>
    <script src="~/js/views/gasto.js" asp-append-version="true"></script>
}