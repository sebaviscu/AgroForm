    <!-- Stats Section -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="bg-success rounded-circle p-3 me-3">
                        <i class="ph ph-tree text-white fs-4"></i>
                    </div>
                    <div>
                        <div class="stat-number">24</div>
                        <div class="stat-label">Cultivos Activos</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="bg-info rounded-circle p-3 me-3">
                        <i class="ph ph-calendar-check text-white fs-4"></i>
                    </div>
                    <div>
                        <div class="stat-number">8</div>
                        <div class="stat-label">Tareas Pendientes</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="bg-warning rounded-circle p-3 me-3">
                        <i class="ph ph-chart-line-up text-white fs-4"></i>
                    </div>
                    <div>
                        <div class="stat-number">92%</div>
                        <div class="stat-label">Rendimiento</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="bg-primary rounded-circle p-3 me-3">
                        <i class="ph ph-package text-white fs-4"></i>
                    </div>
                    <div>
                        <div class="stat-number">156</div>
                        <div class="stat-label">Items Inventario</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-6">
            @await Component.InvokeAsync("CamposActividades")
        </div>

        <div class="col-md-6">
            @await Component.InvokeAsync("ActividadReciente")
            @await Component.InvokeAsync("Lluvia")

        </div>

    </div>

</div>

