<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgroForm</title>

    <!-- Bootstrap 5.3.2 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- Wrapper -->
    <div class="wrapper">
        <!-- Sidebar Overlay para móvil -->
        <div class="sidebar-overlay" id="sidebarOverlay"></div>

        <!-- Sidebar -->
        <nav id="sidebar" class="sidebar bg-dark">
            <div class="sidebar-header bg-primary">
                <div class="d-flex align-items-center justify-content-between p-3">
                    <h4 class="text-white mb-0">
                        <i class="bi bi-tree-fill me-2 sidebar-logo-icon"></i>
                        <span class="sidebar-logo-text">AgroForm</span>
                    </h4>
                    <button type="button" id="sidebarCollapse" class="btn btn-light sidebar-toggle">
                        <i class="bi bi-list"></i>
                    </button>
                </div>
            </div>

            <div class="sidebar-content">
                <ul class="list-unstyled components pt-3">
                    <li class="active">
                        <a href="/Home/Index" class="sidebar-link">
                            <i class="bi bi-house me-3"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="#gestionSubmenu" data-bs-toggle="collapse" aria-expanded="false"
                           class="sidebar-link dropdown-toggle">
                            <i class="bi bi-tree me-3"></i>
                            <span>Gestion</span>
                        </a>
                        <ul class="collapse list-unstyled" id="gestionSubmenu">
                            <li>
                                <a href="/Actividad/Index" class="sidebar-subitem">
                                    <i class="bi bi-plus-circle me-2"></i>Actividades
                                </a>
                            </li>
                            <li>
                                <a href="/Insumo/Index" class="sidebar-subitem">
                                    <i class="bi bi-list-ul me-2"></i>Insumos
                                </a>
                            </li>
                            <li>
                                <a href="/Campo/Index" class="sidebar-subitem">
                                    <i class="bi bi-graph-up me-2"></i>Campos
                                </a>
                            </li>
                            <li>
                                <a href="/Gastos/Index" class="sidebar-subitem">
                                    <i class="bi bi-graph-up me-2"></i>Gastos
                                </a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#administracionSubmenu" data-bs-toggle="collapse" aria-expanded="false"
                           class="sidebar-link dropdown-toggle">
                            <i class="bi bi-box-seam me-3"></i>
                            <span>Administracion</span>
                        </a>
                        <ul class="collapse list-unstyled" id="administracionSubmenu">
                            <li>
                                <a href="/Campanias/Index" class="sidebar-subitem">
                                    <i class="bi bi-tools me-2"></i>Campañas
                                </a>
                            </li>
                            <li>
                                <a href="/Finanza/Index" class="sidebar-subitem">
                                    <i class="bi bi-droplet me-2"></i>Finanzas
                                </a>
                            </li>
                            <li>
                                <a href="/Usuario/Index" class="sidebar-subitem">
                                    <i class="bi bi-flower1 me-2"></i>Usuarios
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#reportesSubmenu" data-bs-toggle="collapse" aria-expanded="false"
                           class="sidebar-link dropdown-toggle">
                            <i class="bi bi-graph-up-arrow me-3"></i>
                            <span>Reportes</span>
                        </a>
                        <ul class="collapse list-unstyled" id="reportesSubmenu">
                            <li>
                                <a href="/Reporte/Index" class="sidebar-subitem">
                                    <i class="bi bi-tools me-2"></i>Reporte 1
                                </a>
                            </li>
                            <li>
                                <a href="/Reporte/Index" class="sidebar-subitem">
                                    <i class="bi bi-tools me-2"></i>Reporte 1
                                </a>
                            </li>
                            <li>
                                <a href="/Reporte/Index" class="sidebar-subitem">
                                    <i class="bi bi-tools me-2"></i>Reporte 1
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li>
                        <a href="#" class="sidebar-link">
                            <i class="bi bi-gear me-3"></i>
                            <span>Configuración</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <!-- Page Content -->
        <div id="content" class="content">
            <!-- Top Navbar -->
            <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
                <div class="container-fluid">
                    <!-- Mobile toggle button -->
                    <button type="button" id="sidebarCollapseMobile" class="btn btn-outline-secondary d-lg-none">
                        <i class="bi bi-list"></i>
                    </button>

                    <!-- Navbar brand (hidden on mobile) -->
@*                     <span class="navbar-brand d-none d-lg-block ms-2 text-muted">
                        @ViewData["Title"]
                    </span> *@

                    <!-- Campañas -->
                    @await Component.InvokeAsync("Campanias")


                    <!-- Spacer -->
                    <div class="flex-grow-1"></div>

                    <!-- Botón circular "+" -->
                    @await Component.InvokeAsync("MenuOpciones")
                    
                    <!-- User Menu -->
                    <div class="dropdown">
                        <button class="btn btn-link dropdown-toggle text-decoration-none d-flex align-items-center"
                                type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center me-2"
                                 style="width: 35px; height: 35px;">
                                <i class="bi bi-person-fill text-white"></i>
                            </div>
                            <span class="text-dark">@User.Identity?.Name</span>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow border-0" aria-labelledby="userDropdown">
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-person me-2"></i>Mi Perfil
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="#">
                                    <i class="bi bi-gear me-2"></i>Configuración
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="post" asp-controller="Access" asp-action="Logout" id="logoutForm">
                                    <button type="submit" class="dropdown-item text-danger">
                                        <i class="bi bi-box-arrow-right me-2"></i>Cerrar Sesión
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>

            <main class="main-content p-3">
                @RenderBody()
            </main>

            @if (!User.Identity.IsAuthenticated)
            {
                <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Sesión Requerida</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body text-center">
                                <i class="bi bi-exclamation-triangle text-warning display-4 mb-3"></i>
                                <p>Para acceder a todas las funciones del sistema, necesitas iniciar sesión.</p>
                            </div>
                            <div class="modal-footer">
                                <a class="btn btn-success" asp-controller="Access" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <script>
                    document.addEventListener('DOMContentLoaded', function() {
                        var loginModal = new bootstrap.Modal(document.getElementById('loginModal'));
                        loginModal.show();
                    });
                </script>
            }
        </div>
    </div>

    <!-- Bootstrap 5.3.2 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebar = document.getElementById('sidebar');
            const content = document.getElementById('content');
            const sidebarCollapse = document.getElementById('sidebarCollapse');
            const sidebarCollapseMobile = document.getElementById('sidebarCollapseMobile');
            const sidebarLogoText = document.querySelector('.sidebar-logo-text');
            const sidebarLogoIcon = document.querySelector('.sidebar-logo-icon');

            // Estado inicial - verificar si está en móvil
            function checkMobile() {
                return window.innerWidth < 992;
            }

            const sidebarOverlay = document.getElementById('sidebarOverlay');
            if (sidebarOverlay) {
                sidebarOverlay.addEventListener('click', function() {
                    if (checkMobile()) {
                        sidebar.classList.remove('mobile-active');
                    }
                });
            }

            // Toggle sidebar for desktop
            if (sidebarCollapse) {
                sidebarCollapse.addEventListener('click', function(e) {
                    e.stopPropagation();
                    toggleSidebar();
                });
            }

            // Toggle sidebar for mobile
            if (sidebarCollapseMobile) {
                sidebarCollapseMobile.addEventListener('click', function(e) {
                    e.stopPropagation();
                    if (checkMobile()) {
                        toggleMobileSidebar();
                    } else {
                        toggleSidebar();
                    }
                });
            }

            function toggleSidebar() {
                sidebar.classList.toggle('active');
                content.classList.toggle('active');

                // Ocultar/mostrar logo text e icono
                if (sidebar.classList.contains('active')) {
                    sidebarLogoText.style.display = 'none';
                    if (sidebarLogoIcon) {
                        sidebarLogoIcon.style.display = 'none';
                    }
                } else {
                    sidebarLogoText.style.display = 'inline';
                    if (sidebarLogoIcon) {
                        sidebarLogoIcon.style.display = 'inline';
                    }
                }
            }

            function toggleMobileSidebar() {
                sidebar.classList.toggle('mobile-active');

                // En móvil, siempre mostrar el logo cuando está activo
                if (sidebar.classList.contains('mobile-active')) {
                    sidebarLogoText.style.display = 'inline';
                    if (sidebarLogoIcon) {
                        sidebarLogoIcon.style.display = 'inline';
                    }
                }
            }

            // Close sidebar when clicking outside on mobile
            document.addEventListener('click', function(event) {
                const isMobile = checkMobile();
                const isClickInsideSidebar = sidebar.contains(event.target);
                const isClickInsideToggle = sidebarCollapseMobile.contains(event.target);
                const isClickInsideDesktopToggle = sidebarCollapse.contains(event.target);

                if (isMobile && !isClickInsideSidebar && !isClickInsideToggle && sidebar.classList.contains('mobile-active')) {
                    sidebar.classList.remove('mobile-active');
                }
            });

            // Close mobile sidebar when clicking on a link
            sidebar.addEventListener('click', function(event) {
                if (event.target.tagName === 'A' && checkMobile()) {
                    sidebar.classList.remove('mobile-active');
                }
            });

            // Handle window resize
            window.addEventListener('resize', function() {
                if (window.innerWidth >= 992) {
                    sidebar.classList.remove('mobile-active');
                    // Restaurar estado normal en desktop
                    if (!sidebar.classList.contains('active')) {
                        sidebarLogoText.style.display = 'inline';
                        if (sidebarLogoIcon) {
                            sidebarLogoIcon.style.display = 'inline';
                        }
                    }
                } else {
                    // En móvil, ocultar sidebar por defecto
                    if (!sidebar.classList.contains('mobile-active')) {
                        sidebarLogoText.style.display = 'inline';
                        if (sidebarLogoIcon) {
                            sidebarLogoIcon.style.display = 'inline';
                        }
                    }
                }
            });

            // Inicializar estado
            if (checkMobile()) {
                sidebar.classList.remove('mobile-active');
            }
        });
    </script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>